{% extends "UcoConsignaBundle::layout.html.twig" %}

{% block title %}Lista de tareas{% endblock %}

{% block body -%}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Archivo</th>
                <th>Última ejecución</th>
                <th>Rutas</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('job_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.filename }}</td>
                <td>{{ entity.lastRun }}</td>
                <td>{{ entity.paths }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('job_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('job_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary btn-sm" href="{{ path('job_new') }}">
        <i class="fa fa-plus"></i> Nueva tarea
    </a>
    {% endblock %}
