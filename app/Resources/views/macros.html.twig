{% macro box(color, head, content) %}
    <div class="widget w{{ color|default('blue') }}">
        <div class="widget-head">
            <div class="pull-left">{{ head }}</div>
            <div class="clearfix"></div>
        </div>
        <div class="widget-content">
            <div class="padd">{{ content }}</div>
        </div>
        <!-- <div class="widget-foot"></div> -->
    </div>
{% endmacro %}

{% macro tablebox(color, head, content) %}
