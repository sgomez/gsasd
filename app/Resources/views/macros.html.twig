        <div class="widget-head">
            <div class="pull-left">{{ head }}</div>
            <div class="clearfix"></div>
        </div>
        <div class="widget-content">
            {{ content }}
        </div>
        <!-- <div class="widget-foot"></div> -->
    </div>
{% endmacro %}